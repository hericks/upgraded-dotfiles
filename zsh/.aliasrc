# See man ls for help
alias ls='ls -AlGp'
alias ll='export CLICOLOR_FORCE=1; ls -AGlp | grep -v "\->"; export CLICOLOR_FORCE=0'

# Use neoVim instead of vim
alias vi='nvim'
alias vim='nvim'

# Change directories quickly
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias ......=.'cd ../../../../../..'
